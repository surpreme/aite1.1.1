<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/log_img_id"
            android:layout_width="87dp"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/logo" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phone_number_login_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="手机登录"
            android:textColor="#ffff8244"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sms_number_login_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="邮箱登录"
            android:textColor="#ff999999"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="27dp" />

    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="43dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/phone_area_front_txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+866"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/phone_area_front_img_id"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/arrow_down" />

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/number_get_edit"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@null"
            android:ems="10"
            android:text=""
            android:inputType="textEmailAddress"
            android:textColor="#999999"
            android:textSize="14sp" />


    </LinearLayout>


    <View
        android:layout_width="335dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/glay" />

    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/widget_textinput_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#FFCCCCCC">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/key_get_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:hint="登录密码"
                android:text=""
                android:background="@null"
                android:textColorHint="#FF6F6F6F"
                android:textColor="@color/glay"
                android:imeOptions="actionDone"
                android:textSize="14sp"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/see_eye_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:button="@drawable/eye_open" />

    </LinearLayout>

    <View
        android:layout_width="335dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/glay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="right"
        android:paddingTop="15dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/remember_key_img"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center"
            android:background="@mipmap/corrtect_none"/>

        <View
            android:layout_width="6dp"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/remember_key_txt"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:button="@null"
            android:layout_gravity="center"
            android:textColor="@color/yelllow"
            android:text="记住密码?" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="355dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/round_background_yellow"
        android:text="@string/login"
        android:textColor="#ffffffff"
        android:textSize="17sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/find_key_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/findkey" />

    </LinearLayout>

</LinearLayout>
